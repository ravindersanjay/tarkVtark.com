# =====================================================================
# Backend Environment Variables - EXAMPLE FILE
# =====================================================================
# Copy this file to .env and fill in your actual credentials
# Never commit .env to version control!

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://your-db-host:5432/your-database?sslmode=require
SPRING_DATASOURCE_USERNAME=your_db_username
SPRING_DATASOURCE_PASSWORD=your_db_password
SPRING_JPA_HIBERNATE_DDL_AUTO=validate

# Server Configuration
SERVER_PORT=8080
FILE_BASE_URL=http://localhost:8080

# Spring Profiles
SPRING_PROFILES_ACTIVE=dev

# Security / JWT Configuration
JWT_SECRET=ChangeThisToASecureRandomString32CharsMinimum
JWT_EXPIRATION_MS=86400000
BCRYPT_STRENGTH=12

# Admin User Configuration
# These credentials create the initial admin user on first startup
# IMPORTANT: Change these in production!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin@2026
ADMIN_EMAIL=admin@tarkvtark.com
ADMIN_FULL_NAME=System Administrator

# File Upload
FILE_UPLOAD_DIR=./uploads
FILE_MAX_SIZE=10485760

# IMPORTANT SECURITY NOTES:
# 1. Never commit this file to version control
# 2. Change all default passwords immediately after deployment
# 3. Use strong, unique passwords in production
# 4. Keep this file readable only by the application user

